<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@color/blue">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:text="User Settings"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        />

    <!-- dar a op -->

    <ImageView
        android:id="@+id/settingImageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/userinfo"
        android:background="@android:color/transparent"
        />    <!-- avatar? -->

    <ImageView
        android:id="@+id/genderImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="70dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/gender"
        android:background="@android:color/transparent"
        />


    <RadioGroup
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:background="#c4c48b"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        >

        <RadioButton
            android:id="@+id/male_rbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female_rbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female" />

        <RadioButton
            android:id="@+id/other_rbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other" />
    </RadioGroup>

    <ImageView
        android:id="@+id/heightImageView"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="370dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/height"
        android:background="@android:color/transparent"
        />

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="380dp"
        android:background="#ECEEE8"
        android:hint="HEIGHT (CM)"
        android:inputType="number"
        android:textSize="25sp"
        android:padding="10dp" />


    <ImageView
        android:id="@+id/ageImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="90dp"
        android:layout_marginTop="470dp"
        android:src="@drawable/age"
        android:background="@android:color/transparent"
        />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="480dp"
        android:background="#ECEEE8"
        android:hint="AGE (YEARS)"
        android:inputType="number"
        android:textSize="25sp"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/weightImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="570dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/weight"
        android:background="@android:color/transparent"
        />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="580dp"
        android:background="#ECEEE8"
        android:inputType="number"
        android:hint="WEIGHT (KG)"
        android:textSize="25sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/save_btn2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#e8940e"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="25sp"
        />



</FrameLayout>
